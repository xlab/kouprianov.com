<% content_for(:page_title, current_article.title) %>
<% wrap_layout :layout do %>
<article>
    <div class="post-title clear">
         <h1><% link_to current_article.url do %><%= current_article.title %><% end %></h1>
         <% if current_article.data.category %>
            <div class="feature clearfix"><span class="banner"><%= current_article.data.category %></span></div>
         <% end %>
         <h4><%= I18n.t :posted_on %> <%= I18n.l(current_article.data.updated || current_article.date, :format => '%e %b %Y') %></h4>
    </div>
    <section role="main">
        <div class='page <%= 'columnize' if current_article.data.columnize %>'>
            <%= yield %>
        </div>
    </section>
</article>
<% end %>